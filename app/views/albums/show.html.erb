<% if !params['edit'] %>

  <% content_for :head do %>
    <!-- Javascript -->
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <% end %>

  <style type="text/css">
    @media only screen and (max-width: 767px){
      #header .slicknav_btn {
          background: #F2784B;
      }
    }
  </style>

  <!-- Start Header -->
  <header id="header" style="background: #fff;">
    <div class="container">
      <div class="row">
        <div class="col-md-2 col-sm-12 col-xs-12">
          <!-- Logo -->
          <div class="logo">
            <%= image_tag('logo.png') %>
          </div>
          <!--/ End Logo -->
          <div class="mobile-nav"></div>
        </div>
        <div class="col-md-10 col-sm-12 col-xs-12">
          <div class="nav-area">
            <!-- Main Menu -->
            <nav class="mainmenu">
              <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav menu">
                  <li><a href="/#personal-area" style="color: black;"><i class="fa fa-home"></i>Home</a></li>
                  <li><a href="/#about" style="color: black;"><i class="fa fa-user-circle"></i>About Me</a></li>
                  <li><a href="/#my-service" style="color: black;"><i class="fa fa-handshake-o"></i>My Services</a></li>
                  <li><a href="/#portfolio" style="color: black;"><i class="fa fa-camera"></i>Photography</a></li>
                  <li><a href="/#contact" style="color: black;"><i class="fa fa-id-card-o"></i>Contact</a></li>   
                </ul>
              </div>
            </nav>
            <!--/ End Main Menu -->
          </div>
        </div>
      </div>
    </div>
  </header>
  <!--/ End Header -->
<% end %>

  <section id="" class="section" style="margin-top: 30px;">
    <div class="container">
      <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
          <% if params['edit'] %>
            <%= link_to "Go Back To Homepage", root_path, class: "btn btn-success", style: "margin-top: 20px; margin-bottom: 15px;" %>
            <%= link_to "Go Back To Albums page", albums_path, class: "btn btn-warning", style: "margin-top: 20px; margin-bottom: 15px;" %>   
          <% end %>
          <div class="section-title">
            <h1><%= @album.name %></h1><br>
            <h3>Photos (<%= @album.photos.count %>)</h3>
            <% if params['edit'] %>
              <br><%= link_to("Add Photo to this album", new_photo_path(album_id: @album.id), class: "btn btn-success", style: "margin-top: 20px; margin-bottom: 15px;")%>
              <%= link_to("Edit this albums information", edit_album_path(@album.id), class: "btn btn-warning", style: "margin-top: 20px; margin-bottom: 15px;")%><br>
              <h3>Click a photo to edit or delete it from this album</h3>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row">
        <%= render @photos %>
      </div>
    </div>
  </section>